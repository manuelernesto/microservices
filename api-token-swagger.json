{
  "openapi": "3.0.1",
  "info": {
    "title": "Atlantico Token API",
    "description": "This is a OTP Token Generation.",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://smpq01a.atlcorp.local:8081/token/api",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/tokens/{telephone}": {
      "get": {
        "tags": [
          "Token Controller"
        ],
        "summary": "Get valid otp token for the specific telephone.",
        "operationId": "getValidTokenWithTelephone",
        "parameters": [
          {
            "name": "telephone",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Token Controller"
        ],
        "summary": "Invalidate the otp token for the specific telephone.",
        "operationId": "invalidateToken",
        "parameters": [
          {
            "name": "telephone",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/v1/tokens": {
      "get": {
        "tags": [
          "Token Controller"
        ],
        "summary": "Validate token by passing the telephone and the otp.",
        "operationId": "validateToken",
        "parameters": [
          {
            "name": "telephone",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "token",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TokenStatus"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Token Controller"
        ],
        "summary": "Generate new otp token.",
        "operationId": "generateToken",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TokenDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Token": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "telephone": {
            "type": "string"
          },
          "confirmationToken": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "TokenDTO": {
        "type": "object",
        "properties": {
          "telephone": {
            "type": "string"
          },
          "duration": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "TokenStatus": {
        "type": "object",
        "properties": {
          "telephone": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "OK",
              "NOK"
            ]
          }
        }
      }
    }
  }
}